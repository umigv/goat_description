<?xml version="1.0"?>
<robot name="goat">
    <material name="white">
        <color rgba="1 1 1 1"/>
    </material>

    <!-- center of the frame -->
    <link name="base_link">
        <visual>
            <geometry>
                <box size="0.762 0.4572 0.3048"/>
            </geometry>
            <material name="white"/>
        </visual>

        <collision>
            <geometry>
                <box size="0.762 0.4572 0.3048"/>
            </geometry>
        </collision>
    </link>

    <!-- center of the footprint of the frame -->
    <link name="base_footprint">
    </link>

    <joint name="base_footprint_joint" type="fixed">
        <parent link="base_link"/>
        <child link="base_footprint"/>
        <origin xyz="0 0 -0.2814"/>
    </joint>

    <!-- position between two front wheels - encoders centered around this -->
    <link name="encoders">
    </link>

    <joint name="encoders_joint" type="fixed">
        <parent link="base_link"/>
        <child link="encoders"/>
        <origin xyz="0.28575 0 -0.1131"/>
    </joint>

    <link name="left_wheel">
        <visual>
            <geometry>
                <cylinder length="0.1016" radius="0.1651"/>
            </geometry>
            <material name="black"/>
            <origin rpy="0 1.5708 0" xyz="0 0 0"/>
        </visual>

        <collision>
            <geometry>
                <cylinder length="0.1016" radius="0.1651"/>
            </geometry>
            <origin rpy="0 1.5708 0" xyz="0 0 0"/>
        </collision>
    </link>

    <!-- left wheel joint -->
    <joint name="wheel0" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel"/>
        <axis xyz="1 0 0"/>
        <origin rpy="0 0 1.5708" xyz="0.2856 0.2922 -0.1131"/>
    </joint>

    <link name="right_wheel">
        <visual>
            <geometry>
                <cylinder length="0.1016" radius="0.1651"/>
            </geometry>
            <material name="black"/>
            <origin rpy="0 1.5708 0" xyz="0 0 0"/>
        </visual>

        <collision>
            <geometry>
                <cylinder length="0.1016" radius="0.1651"/>
            </geometry>
            <origin rpy="0 1.5708 0" xyz="0 0 0"/>
        </collision>
    </link>

    <!-- right wheel joint -->
    <joint name="wheel1" type="continuous">
        <parent link="base_link"/>
        <child link="right_wheel"/>
        <axis xyz="1 0 0"/>
        <origin rpy="0 0 -1.5708" xyz="0.28575 -0.2922 -0.1131"/>
    </joint>

    <link name="laser">
        <visual>
            <geometry>
                <cylinder length="0.0349" radius="0.0381"/>
            </geometry>
            <material name="black"/>
        </visual>
    </link>

    <joint name="laser_joint" type="fixed">
        <parent link="base_link"/>
        <child link="laser"/>
        <origin xyz="-0.0572 0 0.1715"/>
    </joint>

    <gazebo>
        <plugin name="gazebo_ros_control" filename="libgazebo_ros_control.so">
            <robotNamespace>/</robotNamespace>
        </plugin>
    </gazebo>
</robot>
